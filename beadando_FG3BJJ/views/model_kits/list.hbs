{{#extend "scripts"}}

<script src="/lib/bootstrap-validator/dist/validator.min.js"></script>

{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Makettkészleteim</h1>
</div>

<table class="table table-striped table-hover " id="modelKitTable">
    <thead>
        <tr>
            <th>Hozzáadva</th>
            <th>Állapot</th>
            <th>Gyártó</th>
            <th>Készletnév</th>
        </tr>   
    </thead>
    <tbody>
        {{#each modelkits}}
        <tr>
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{make}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{kitname}}</td>
            <td><a class="btn btn-primary btn-sm szerkesztes-gomb" href="/model_kits/edit/{{id}}" role="button">Szerkesztés</a></td>
            <td><a class="btn btn-warning btn-sm elkezdtem-gomb" href="/model_kits/started/{{id}}" role="button">Elkezdtem</a></td>
            <td><a class="btn btn-success btn-sm befejeztem-gomb" href="/model_kits/done/{{id}}" role="button">Befejeztem</a></td>
            <td><a class="btn btn-danger btn-sm torles-gomb" href="/model_kits/delete/{{id}}" role="button">Törlöm</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a id="newModelKitButton" href="/model_kits/new" class="btn btn-default">Új készlet hozzáadása</a></p>

